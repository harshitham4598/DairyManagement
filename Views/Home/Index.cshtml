    <script src="~/Scripts/toastr.js"></script>

 
    <script>

        //fetching data to dataTables

        $(document).ready(function () {
            //Saving

            $('#AreaRegForm').submit(function (e) {
                e.preventDefault();
                e.stopImmediatePropagation()
                
                    var action = $('#AreaRegForm').attr('action')
                    var data = new FormData($('#AreaRegForm').get(0));
                    $('.loading').show()
                    $.ajax({
                        url: action,
                        data: data,
                        contentType: false,
                        processData: false,
                        type: 'POST',
                        dataType: 'json',
                        success: function (result) {
                            if (result.Success) {
                                //  table.ajax.reload()
                                //  $('.loading').hide();
                                $('#AreaRegForm').trigger("reset");
                                toastr.success(result.Message, "Success", { positionClass: "toast-top-center" })

                                if (result.userType == "Admin") {
                                    window.location.href = "@Url.Action("About", "Home")"
                                } 
                                else {
                                    window.location.href = "@Url.Action("Index", "EmployeeRegister")"
                                }

                            }
                            else {
                                toastr.error(result.Message, "Error", { positionClass: "toast-top-center" })
                            }
                        },
                        error: function () {
                            $('.loading').hide()
                            toastr.error("Server Error", "Error", { positionClass: "toast-top-center" })
                        }
                    })
            
            })



            $('#RegForm').submit(function (e) {
                e.preventDefault();
                e.stopImmediatePropagation()
                if ($('#RegForm').valid()) {
                    var action = $('#RegForm').attr('action')
                    var data = new FormData($('#RegForm').get(0));
                    $('.loading').show()
                    $.ajax({
                        url: action,
                        data: data,
                        contentType: false,
                        processData: false,
                        type: 'POST',
                        dataType: 'json',
                        success: function (result) {
                            if (result.Success) {
                                //  table.ajax.reload()
                                //  $('.loading').hide();
                                $('#RegForm').trigger("reset");
                                toastr.success(result.Message, "Success", { positionClass: "toast-top-center" })

                                if (result.userType == "Employer") {
                                    window.location.href = "@Url.Action("PostJobs", "EmployeeRegister")"
                                }
                                else if (result.userType == "ADMIN") {
                                    window.location.href = "@Url.Action("dash_board", "Dash_Board")"
                                }
                                else if (result.userType == "Job Seeker") {
                                    window.location.href = "@Url.Action("Index", "Home")"
                                }

                                else {
                                    window.location.href = "@Url.Action("PostJobs", "EmployeeRegister")"
                                }

                            }
                            else {
                                toastr.error(result.Message, "Error", { positionClass: "toast-top-center" })
                            }
                        },
                        error: function () {
                            $('.loading').hide()
                            toastr.error("Server Error", "Error", { positionClass: "toast-top-center" })
                        }
                    })
                }
            })







        })
    </script>


